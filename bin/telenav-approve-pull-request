source telenav-library-functions

if [[ -z "$GITHUB_PERSONAL_ACCESS_TOKEN" ]]; then

    echo "Must set GITHUB_PERSONAL_ACCESS_TOKEN environment variable to approve pull requests"
    exit 1

fi

if [[ "$#" -eq 1 ]]; then

    branch_name=$1

else

    read -r -p "Branch name? "
    branch_name=$REPLY

fi

read -r -p "Body? "
body=$REPLY

cactus_all git-approve-pull-request \
    -Dcactus.authentication-token=\""$GITHUB_PERSONAL_ACCESS_TOKEN"\" \
    -Dcactus.pr.branch-to-approve=\""$branch_name"\" \
    -Dcactus.pr.body=\""$body"\" || exit 1
