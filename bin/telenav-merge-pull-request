source telenav-library-functions

if [[ -z "$GITHUB_PERSONAL_ACCESS_TOKEN" ]]; then

    echo "Must set GITHUB_PERSONAL_ACCESS_TOKEN environment variable to merge pull requests"
    exit 1

fi

if [[ "$#" -eq 0 ]]; then

    branch_name=$(branch_name "$TELENAV_WORKSPACE/kivakit")

elif [[ "$#" -eq 1 ]]; then

    branch_name=$1

else

    usage "[branch_name]?"

fi

cactus_all git-merge-pull-request \
    -Dcactus.authentication-token="$GITHUB_PERSONAL_ACCESS_TOKEN" \
    -Dcactus.branch-name="$branch_name" || exit 1
